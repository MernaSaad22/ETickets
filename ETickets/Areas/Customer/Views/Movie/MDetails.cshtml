@model ETickets.Models.Movie

@{
    ViewData["Title"] = "Movie Details";
}

<div class="row">
    <div class="col-md-6">
        <img src="~/images/MovieImg/@Model.ImgUrl" class="img-fluid" alt="@Model.Name" />
    </div>
    <div class="col-md-6">
        <h2>@Model.Name</h2>
        <p><strong>Description:</strong> @Model.Description</p>
        <p><strong>Price:</strong> $@Model.Price</p>
        <p><strong>Cinema:</strong> @Model.Cinema.Name</p>
        <p><strong>Category:</strong> @Model.Category.Name</p>

        <p><strong>Status:</strong> @Model.Status</p>

      

            
    
         @if (!string.IsNullOrEmpty(Model.TrailerUrl))
            {

                <div class="mb-3">
                    <video width="100%" height="300" controls>
                        <source src="~/videos/@Model.TrailerUrl" type="video/mp4">
                        Your browser does not support the video tag.
                    </video>
                </div>
            }
       
           
        




        <h4>Actors</h4>
        @if (Model.ActorMovies != null && Model.ActorMovies.Any())
        {
            <div class="row">
                @foreach (var actorMovie in Model.ActorMovies)
                {
                    var actor = actorMovie.Actor;
                    <a href="/Customer/Actor/ADetails/@actor.Id">
                        <img src="~/images/CastImg/@actor.ProfilePicture" class="img-fluid rounded-circle"
                             alt="@actor.FirstName @actor.LastName" style="width: 100px; height: 100px; object-fit: cover;" />
                    </a>
                    <p>@actor.FirstName @actor.LastName</p>
                    
                }
            </div>
        }
        else
        {
            <p>No actors listed for this movie.</p>
        }


        
    </div>
</div>
