@model IEnumerable<ETickets.Models.Movie>

@{
    ViewData["Title"] = "Movies";
   // Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="white-text">Movies</h2>


<div class="text-right">
    <a href="/Admin/Movie/Create" class="btn btn-primary">Create Movie</a>
</div>

<table class="table table-dark table-striped-columns mt-3">
    <thead>
        <tr>
            <th class="white-text">ID</th>
            <th class="white-text">Name</th>
            <th class="white-text">Description</th>
            <th class="white-text">Category</th>
            <th class="white-text">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Id</td>
                <td>@movie.Name</td>
                <td>@(movie.Description?.Length > 100 ? movie.Description.Substring(0, 100) + "..." : movie.Description)</td>
                <td>@movie.Category?.Name</td>
                <td>
                    <a class="btn btn-success btn-sm" href="/Admin/Movie/Edit/@movie.Id">Edit</a>
                    <form asp-action="Delete" asp-route-id="@movie.Id" method="post" style="display:inline;"
                          onsubmit="return confirm('Are you sure you want to delete this movie?');">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
