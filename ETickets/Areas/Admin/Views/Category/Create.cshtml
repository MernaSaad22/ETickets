@model ETickets.ViewModels.CategoryCreateViewModel

@{
    ViewData["Title"] = "Create Category";
}

<h2>Create New Category</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SelectedMovieIds"></label>
        <select asp-for="SelectedMovieIds" asp-items="Model.Movies" class="form-control" multiple>
        </select>
        <span asp-validation-for="SelectedMovieIds" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
