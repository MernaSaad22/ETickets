@model ETickets.ViewModels.CinemaCreateViewModel

<h2>Create Cinema</h2>

<form asp-action="CreateC" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CinemaLogo"></label>
        <input asp-for="CinemaLogo" class="form-control" />
        <span asp-validation-for="CinemaLogo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SelectedMovieIds"></label>
        <select asp-for="SelectedMovieIds" asp-items="Model.Movies" class="form-control" multiple="multiple"></select>
        <span asp-validation-for="SelectedMovieIds" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
